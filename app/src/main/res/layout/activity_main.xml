<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtVar1"
        android:layout_width="65dp"
        android:layout_height="46dp"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Var1"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="84dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txtOperator"
        android:layout_width="65dp"
        android:layout_height="44dp"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="+"
        app:layout_constraintStart_toEndOf="@+id/txtVar1"
        tools:layout_editor_absoluteY="84dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/txtVar2"
        android:layout_width="75dp"
        android:layout_height="47dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Var2"
        app:layout_constraintStart_toEndOf="@+id/txtOperator"
        tools:layout_editor_absoluteY="84dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnEqual"
        android:layout_width="76dp"
        android:layout_height="47dp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="="
        app:layout_constraintStart_toEndOf="@+id/txtVar2"
        tools:layout_editor_absoluteY="84dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="144dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="52dp"
        android:text="Result"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOperator" />

</androidx.constraintlayout.widget.ConstraintLayout>